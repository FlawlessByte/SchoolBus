<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminHomeActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:onClick="addStudentClicked"
            android:layout_margin="8dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:text="Add Student"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="8dp"
            android:onClick="studentListClicked"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:text="Student List"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:onClick="addDriverClicked"
            android:layout_margin="8dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:text="Add Driver"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="8dp"
            android:onClick="driverListClicked"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:text="Driver List"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="8dp"
            android:onClick="viewAttendanceClicked"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:text="View Attendance"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>